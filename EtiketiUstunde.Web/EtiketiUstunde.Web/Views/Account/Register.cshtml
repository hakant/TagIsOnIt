@using EtiketiUstunde.Web.Models
@model EtiketiUstunde.Web.Models.RegisterModel

@section Header
{
    <script src="@Url.Content("~/Scripts/etiketiustunde.register.js")"></script>
    <script type="text/javascript">
        $(function () {
            $('h1').on('click', function () {
                document.location.href = '@Url.Action("Index", "Home")';
            });
        });
    </script>
}

@section Body
{
    <div class="row">
        <div class="span3 offset7">
            <h1 class="clickable">Etiketi Ustunde</h1>
        </div>
    </div>
    <div class="row">
        <div class="span7 offset5">
            <div class="span7 manual_login-section">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.TextBoxFor(m => m.UserName, new {@placeholder = "kullanici adi"})

                    @Html.PasswordFor(m => m.Password , new {@placeholder = "sifre"})

                    @Html.PasswordFor(m => m.ConfirmPassword, new {@placeholder = "sifre tekrar"})

                    
                    <input type="submit" class="btn-success btn-large login_button_manual" value="Register" />
                }

            </div>
            <div class="span7 login-validation-section">
                @Html.ValidationSummary(true)
            </div>
        </div>
    </div>
}